p.personal_label--no_qty {
  position: absolute;
  font-size: 11px;
  text-transform: capitalize;
  border: 1px solid #a32f4f;
  border-radius: 3px;
  padding: 3px 10px;
  transition: 0.3s ease-in-out;
  background: #a32f4f;
  color: #fffefe;
  top: 50%;
  left: 50%;
  width: clamp(1px, calc(90% - 20px), 175px);
  text-align: center;
  transform: translate(-50%, -50%);

  opacity: 0;
  pointer-events: none;
}

p.personal_label--no_qty--active{
  opacity: 1;
  pointer-events: all;
}

p.personalize_labels--var_price {
  position: absolute;
  bottom: 5px;
  right: 10px;
  color: #6c757d;
}

