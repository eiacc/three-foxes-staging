.ctm__contentInnderTabsgiftLabelContent .filepond--root{
    height: 180px !important;
}

.ctm__contentInnderTabsgiftLabelContent .filepond--root .filepond--drop-label{
    background-color: #000 !important;
}



@media only screen and (min-width: 768px) {
   
    .ctm_tab_content_inner_area {
        display: flex;
        /* min-height: 75vh; */
        width: 100%;
        min-width: 100%;
    }
  .img-fluid {
    margin-bottom: 20px !important;
}
    .ctm__gift_sets_pro_area .ctm_tab_content_inner_area {
        min-height: unset !important;
    }
    
    .ctm_tab_content_footer {
        align-self: end;
        position: sticky;
        bottom: 100px;
    }

    .ctm_tab_content_inner_area > .row{
        width: 100%;
    }

    .ctm__tab_content_area[data-tab_index="1"]:not(.ctm__gift_products_content_area,),
    .ctm__tab_content_area[data-tab_index="1"]:not(.ctm__gift_sets_area,),
    .ctm__tab_content_area[data-tab_index="2"]:not(.ctm__gift_products_content_area,),
    .ctm__tab_content_area[data-tab_index="2"]:not(.ctm__gift_sets_area,){
        display: grid;
        grid-template-columns: auto auto;    
    }

    .ctm__tab_content_area[data-tab_index="1"]:not(.ctm__gift_products_content_area,) > .ctm_tab_content_header ,
    .ctm__tab_content_area[data-tab_index="1"]:not(.ctm__gift_sets_area,) > .ctm_tab_content_header ,
    .ctm__tab_content_area[data-tab_index="2"]:not(.ctm__gift_products_content_area,) > .ctm_tab_content_header ,
    .ctm__tab_content_area[data-tab_index="2"]:not(.ctm__gift_sets_area,) > .ctm_tab_content_header {
        grid-column: 1 / 3; 
    }

    .ctm__contentInnderTabsgiftLabelContent .filepond--root{
        height: 250px !important;
    }
}
