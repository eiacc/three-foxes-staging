{%- liquid
  comment
    When adding new font(s), make sure to add it
    under 'initialize-custom-fonts.liquid' snippet

    Fallback font is sans-serif
    Code by http://github.com/eiacc
  endcomment

  assign word_list = font | split: '_'

  capture font_name
    for word in word_list
      echo word | capitalize
      unless forloop.last
        echo ' '
      endunless
    endfor
  endcapture
  
  if font_name != '' 
    echo font_name
  else
    echo 'sans-serif'
  endif
-%}