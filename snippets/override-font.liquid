{%- liquid
  comment
    When adding new font(s), make sure to add it
    under 'initialize-custom-fonts.liquid' snippet

    Fallback font is sans-serif
    Code by http://github.com/eiacc
  endcomment

  assign font_name = font | split: '_' | join: ' ' | capitalize
  if font 
    echo font_name
  else
    echo 'sans-serif'
  endif
-%}