{% comment %} <div class="ctm__tab_content_area ctm__{{ bkst.tabLabel | downcase | replace: ' ', '_' }}_content_area px-3- pr-3 {% unless forloop.index == 1 %}d-none{% endunless %}" data-tab_index="{{ forloop.index }}" data-step_index="{{ "step_" | append: forloop.index }}"> {% endcomment %}
  <div class="ctm__tab_content_area ctm__extras_content_area px-3- pr-3 {{ ctmWrapClass }} {% unless forloop.index == 1 %}d-none{% endunless %}" data-tab_index="{{ forloop.index }}" data-step_index="{{ "step_" | append: forloop.index }}">
  {% if bkst.tabHeading != blank or bkst.tabSubHeading != blank %}
    <div class="px-3 ctm_tab_content_header d-flex align-items-end justify-content-between pb-2 flex-wrap ctm_pl_0- ctm_pr_md0">
      {% if bkst.tabHeading != blank %}
        <div class="tab_content_heading ctmFontDahlia">
          <h3>{{ bkst.tabHeading }}</h3>
        </div>
      {% endif %}
      {% if bkst.tabSubHeading != blank %}
        <div class="tab_content_sub_heading ctmSecFontNormal">
          <p class="ctmSecFontNormal- ctmSecFontAvenir ctmSecFont600- ctm_tab_clr_blk">{{ bkst.tabSubHeading }}</p>
        </div>
      {% endif %}
    </div>
  {% endif %}
  <div class="ctm_tab_content_inner_area px-md-3 pt-3- container-fluid ctm_pr_md0">
    <div class="row">
      <div class="col-md-6 ctm_final_touches pt-3 ctm_bottle_tag border-0 mx-auto">
        {% comment %} <h6 class="ctmAvenirNext pl-3">BOTTLE TAGS</h6> {% endcomment %}
        <div class="col-md-8- col-md-10 p-md-0 mx-auto text-center ctmBottleTagImgs">
          {% comment %} <img src="https://threefoxes.com.au/cdn/shop/t/31/assets/Bottle_NameTags_3_600x.png?v=67771117219630029651686892841" alt="{{ shop.name }}" class="mx-auto with_label_tag"> {% endcomment %}
          <img src="https://cdn.shopify.com/s/files/1/0289/0180/2070/files/Neck-Tag_600x_14c6aa0e-c668-45ac-a353-3f1cd27a6e38.png?v=1727074016" alt="{{ shop.name }}" class="mx-auto with_label_tag">
          {% comment %} <img src="https://threefoxes.com.au/cdn/shop/t/31/assets/Bottle_NameTags_none_600x.png?v=147988245309526240021686892841" alt="{{ shop.name }}" class="mx-auto without_label_tag d-none"> {% endcomment %}
          <img src="https://cdn.shopify.com/s/files/1/0289/0180/2070/files/ESPRESSO-MARTINI_x600_3672ca3a-5c80-4f31-81ae-bf1d262edcec.png?v=1727071676" alt="{{ shop.name }}" class="mx-auto without_label_tag d-none">
          <p>Our blank bottle tags allow you to personalise each bottle and
            work great as place settings.
          </p>
          <h6>{{ '9' | money | append: ' per pack of 24 Tags' }}</h6>
          <div class="mt-3">
            <input type="radio" name="bottle_tags" id="bottle_tags1" class="bottle_tags d-none" data-isBottleTag="with_label_tag" data-value="bottle tag for $45" value="33176709300310" checked data-type="product" data-ctm_quantity="1" data-ctm_price="{{ 4500 | money }}" data-ctm_price_no_currency="{{ 45 }}" data-ctm_title="Bottle tag">
            <label class="btn ctmBtn btn-outline-secondary" for="bottle_tags1">
              YES PLEASE - $45
            </label>
            <input type="radio" name="bottle_tags" id="bottle_tags2" class="bottle_tags d-none" data-isBottleTag="without_label_tag" data-value="bottle tag no thanks" value="33280155320406" data-type="product" data-ctm_quantity="1" data-ctm_price="{{ 0 | money }}" data-ctm_price_no_currency="{{ 0 }}" data-ctm_title="Bottle tag">
            <label class="btn ctmBtn btn-outline-secondary" for="bottle_tags2">
              NO THANKS
            </label>
          </div>
        </div>
      </div>
    </div>
    <div class="mob_border-top ctm_tab_content_footer text-md-right text-center mt-3">
      {% render 'jtzuya_customizer_buttons', bkst: bkst %}
    </div>
  </div>
</div>